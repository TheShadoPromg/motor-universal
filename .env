# --- Postgres ---
PGUSER=admin
PGPASSWORD=admin
POSTGRES_DB=motor

# MLflow (⚠️ Ajuste 1: driver psycopg2)
MLFLOW_BACKEND_STORE_URI=postgresql+psycopg2://admin:admin@postgres:5432/motor

# --- MinIO / S3 local ---
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme

# Credenciales S3 que usará MLflow/Boto3 (⚠️ Ajuste 2: declarar explícitamente)
AWS_ACCESS_KEY_ID=admin
AWS_SECRET_ACCESS_KEY=changeme
AWS_REGION=us-east-1
AWS_S3_FORCE_PATH_STYLE=true

# Endpoint S3 para MLflow (⚠️ Ajuste 3: variable específica de MLflow)
MLFLOW_S3_ENDPOINT_URL=http://minio:9000

# Raíz de artefactos (tu valor es válido)
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://motor-artifacts/mlflow

# --- Prefect ---
PREFECT_API_URL=http://prefect:4200/api
